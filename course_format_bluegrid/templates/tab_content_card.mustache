<div class="col-lg-4 col-md-6 col-sm-12 d-sm-flex">
    <div class="card course-content-card w-full">
        <div class="card-title">
            {{#name}}
            <span class="section-number {{#hidden}}text-muted{{/hidden}}{{^hidden}}text-brand{{/hidden}}">
                {{name}}
            </span>
            {{/name}}
            {{#optionmenu}}
                {{{optionmenu}}}
            {{/optionmenu}}
            {{{hiddenmessage}}}
            {{^optionmenu}}
                {{#hasprogress}}
                    <div class="counter">
                        <div class="pie-progress pie-progress-sm" data-plugin="pieProgress" data-valuemax="100" data-barcolor="#57c7d4" data-size="100" data-barsize="10" data-goal="100" aria-valuenow="{{progress}}" role="progressbar">
                            <div class="pie-progress-content" style="z-index:2;">
                                <div class="pie-progress-number">{{{progress}}}&#37;</div>
                            </div>
                        </div>
                    </div>
                {{/hasprogress}}
            {{/optionmenu}}
        </div>
        <div class="card-content">
            <h2 class="section-title {{#hidden}}text-muted{{/hidden}}">{{{ title }}}</h2>
        </div>
        <div class="card-footer">
            <a href="#section-{{index}}" class="btn {{^hidden}}btn-brand{{/hidden}}{{#hidden}}btn-dark{{/hidden}} d-block p-10 font-weight-800">{{#str}} access, format_bluegrid {{/str}}</a>
        </div>
    </div>
</div>