<div class="course-banner-container">
    <img src="{{image}}" alt="" class="course-banner">
    {{#coursename}}
        <div class="course-banner-overlay"></div>
    {{/coursename}}
</div>
{{#coursename}}
    <h3 class="course-name">{{coursename}}</h3>
{{/coursename}}
<div class="course-navigation-wrapper">
    <ul class="nav course-navigation" role="tablist">
        {{#tabs}}
            <li class="nav-item {{#dropdown}}dropdown{{/dropdown}}">
                {{^dropdown}}
                    <a href="{{url}}" class="nav-link {{#class}}{{class}}{{/class}}">
                        {{title}}
                    </a>
                {{/dropdown}}
                {{#dropdown}}
                    <a href="{{url}}" class="nav-link {{#class}}{{class}}{{/class}} {{triggerextraclasses}} dropdown-toggle" id="action-menu-toggle-{{instance}}" aria-label="{{title}}" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" aria-controls="action-menu-{{instance}}-menu">
                        {{title}}
                    </a>
                    {{#secondary}}
                        <div class="dropdown-menu dropdown-menu-right {{classes}}"{{#attributes}} {{name}}="{{value}}"{{/attributes}}>
                        {{#items}}
                            {{#actionmenulink}}
                                {{<core/action_menu_link}}
                                    {{$actionmenulinkclasses}}dropdown-item {{classes}}{{/actionmenulinkclasses}}
                                {{/core/action_menu_link}}
                            {{/actionmenulink}}
                            {{#actionmenufiller}}
                                <div class="dropdown-divider" role="presentation"><span class="filler">&nbsp;</span></div>
                            {{/actionmenufiller}}
                            {{^actionmenulink}}
                                {{^actionmenufiller}}
                                    <div class="dropdown-item">{{>core/action_menu_item}}</div>
                                {{/actionmenufiller}}
                            {{/actionmenulink}}
                        {{/items}}
                        </div>
                    {{/secondary}}
                {{/dropdown}}
            </li>
        {{/tabs}}
    </ul>
</div>